<questao>
    <title>Verificação de Palíndromo</title>
    <enunciado>Crie uma função que verifica se uma string é um palíndromo (lida da mesma forma de trás para frente).</enunciado>
    <inputExample>arara</inputExample>
    <outputExample>true</outputExample>
    <baseCode>
        <language>php</language>
        <code><![CDATA[<?php
        $string = $argv[1];
        ?>]]></code>
    </baseCode>
    <correctCode>
        <language>php</language>
        <code><![CDATA[<?php
        $string = $argv[1];
        echo ($string === strrev($string)) ? 'true' : 'false';
        ?>]]></code>
    </correctCode>
    <testCases>
        <testCase>
            <input>madam</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>hello</input>
            <expectedOutput>false</expectedOutput>
        </testCase>
        <testCase>
            <input>level</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>world</input>
            <expectedOutput>false</expectedOutput>
        </testCase>
        <testCase>
            <input>racecar</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>deified</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>civic</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>noon</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
        <testCase>
            <input>python</input>
            <expectedOutput>false</expectedOutput>
        </testCase>
        <testCase>
            <input>12321</input>
            <expectedOutput>true</expectedOutput>
        </testCase>
    </testCases>
</questao>
